/**
 * üßÆ Calcular promedios a partir de los datos y encabezados
 */
function calcularPromedios(nuevosDatos, encabezados) {
  return encabezados.map((col, i) => {
    if (i === 0) return "Promedio:";
    const valores = nuevosDatos.map(row => row[i]).filter(v => !isNaN(v) && v !== "");
    return valores.length > 0
      ? (valores.reduce((a, b) => a + parseFloat(b), 0) / valores.length).toFixed(2)
      : "N/A";
  });
}

/**
 * 5Ô∏è‚É£ Aplicar An√°lisis por Columna (incluye el valor del promedio)
 */
function crearAnalisisColumnas(hoja, encabezados, promedios) {
  const filaAnalisisColumnas = hoja.getLastRow() + 2;

  const analisisColumnasTexto = encabezados.map((columna, index) => {
    if (index === 0) return "An√°lisis por Columna:";

    const valorPromedio = parseFloat(promedios[index]);
    if (isNaN(valorPromedio)) return "N/A";

    let texto = `${valorPromedio} - `;

    switch (columna) {

      case "app_gpu_time_microseconds":
          return texto + (valorPromedio > 8000 ? "‚õî GPU Render Time ALTO (>8000¬µs) - Cuello de botella" :
                  valorPromedio > 5000 ? "‚ö†Ô∏è GPU Render Moderado - Posible optimizaci√≥n" :
                                "‚úÖ GPU Render Bajo - Buen rendimiento");

      case "gpu_utilization_percentage":
        return texto + (valorPromedio > 90 ? "‚õî GPU ALTA (>90%) - Cuello de botella" :
                        valorPromedio > 50 ? "‚ö†Ô∏è GPU Moderada - Optimizaci√≥n posible" :
                                             "‚úÖ GPU Baja (<50%) - Rendimiento √≥ptimo");
      case "average_frame_rate":
        return texto + (valorPromedio < 30 ? "‚õî FPS BAJOS (<30) - Rendimiento deficiente" :
                        valorPromedio < 60 ? "‚ö†Ô∏è FPS Moderados - Mejorar fluidez" :
                                             "‚úÖ FPS Altos (>60) - Buen rendimiento");
      case "cpu_utilization_percentage":
        return texto + (valorPromedio > 90 ? "‚õî CPU ALTA (>90%) - Cuello de botella" :
                        valorPromedio > 50 ? "‚ö†Ô∏è CPU Moderada - Rendimiento OK" :
                                             "‚úÖ CPU Baja (<50%) - Rendimiento √≥ptimo");
      case "available_memory_MB":
        return texto + (valorPromedio < 500 ? "‚õî MEMORIA BAJA (<500MB) - Riesgo de problemas" :
                        valorPromedio < 1000 ? "‚ö†Ô∏è MEMORIA Moderada (<1GB) - Vigilar uso" :
                                               "‚úÖ MEMORIA OK (>=1GB) - Sin problemas");
      case "normalized_gpu_time":
        return texto + (valorPromedio > 90 ? "‚õî GPU TIME ALTO - Cuello de botella" :
                        valorPromedio > 70 ? "‚ö†Ô∏è GPU TIME Moderado - Optimizaci√≥n posible" :
                                             "‚úÖ GPU TIME Bajo - Rendimiento √≥ptimo");
      default:
        return `Prom: ${valorPromedio}`;
    }
  });

  const rangoAnalisisColumnas = hoja.getRange(filaAnalisisColumnas, 1, 1, encabezados.length);
  rangoAnalisisColumnas.setValues([analisisColumnasTexto])
    .setWrapStrategy(SpreadsheetApp.WrapStrategy.WRAP)
    .setVerticalAlignment("middle")
    .setHorizontalAlignment("center");

  return filaAnalisisColumnas;
}
